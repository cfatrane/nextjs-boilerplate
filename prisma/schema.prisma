generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                      String   @id @default(cuid())
  clerkUserId             String   @unique
  username                String?
  firstName               String?
  lastName                String?
  email                   String   @unique
  hasVerifiedEmailAddress Boolean  @default(false)
  imageUrl                String?
  lastActiveAt            DateTime @default(now())
  lastSignInAt            DateTime @default(now())
  role                    Role     @default(USER)

  Session Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}

model Session {
  clerkSessionId String   @unique
  clerkUserId    String
  status         String
  lastActiveAt   DateTime
  abandonAt      DateTime
  expireAt       DateTime
  user           User     @relation(fields: [clerkUserId], references: [clerkUserId], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
